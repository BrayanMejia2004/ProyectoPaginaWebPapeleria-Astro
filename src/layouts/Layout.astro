---
import "@fontsource-variable/space-grotesk";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="En Papelería Jsandy, ofrecemos una amplia gama de servicios y productos, desde impresiones y fotocopias hasta materiales escolares, bisutería y cosméticos. Además, brindamos conveniencias como servicios bancarios, recargas y pagos de servicios. ¡Encuentra todo lo que necesitas en un solo lugar con nosotros"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="Papelería, Impresiones, Fotocopias, Scanners, Materiales escolares, Bisutería, Cosméticos, Servicios bancarios, Pagos de servicios"
    />
    <meta name="Lang" content="es" />
    <meta name="Author" content="Brayan Mejia" />
    <link rel="icon" type="icon" href="#" />
    <title>{title}</title>
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer />

    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>

<style is:global>
  body {
    font-family: "Space Grotesk Variable", sans-serif;
  }
</style>
