---
import LinksNavbar from "../components/LinksNavbar.astro";
import Logo from "../components/Logo.astro";
import BotonContacto from "./BotonContacto.astro";
import Barras from "../Icons/Barras.astro";

const NombreContacto = "Contactanos";
---

<nav
  class="bg-gray-100 shadow-lg shadow-gray-300 fixed w-full z-20 top-0 start-0"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <Logo />
    <div class="flex md:order-2 space-x-5">
      <BotonContacto>
        {NombreContacto}
      </BotonContacto>

      <Barras />
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1">
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 font-medium md:space-x-10 rtl:space-x-reverse md:flex-row md:mt-0"
      >
        <LinksNavbar />
      </ul>
    </div>
  </div>
</nav>
